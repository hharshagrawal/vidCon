<Window x:Class="VideoConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Video Converter" Height="150" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="142*"/>
        </Grid.ColumnDefinitions>

        <Button  x:Name="bOpenFileDialog" Content="Open File"
                 Height="25" Width="100" Margin="10,10,0,0"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Click="bOpenFileDialog_Click" />

        <TextBox  x:Name="tbResults" Text="File Path"
                 Height="25" Width="300" Margin="172,11,21.6,0"
                 HorizontalAlignment="Center" VerticalAlignment="Top" 
                 Background="Beige" Grid.ColumnSpan="2" />
        <Button  x:Name="Convert_button" Content="Convert"
                 Height="30" Width="100" Margin="10,0,0,41.4"
                 HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                 Click="Convert_Click" RenderTransformOrigin="0.53,3.64" />
        <TextBox x:Name="Conversion_result" Text="Conversion Status"
                 Height="25" Width="300" Margin="172,0,21.6,40.4"
                 HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                 Background="Beige" Grid.ColumnSpan="2" />


    </Grid>
</Window>
